%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", "xml:lang" => "en"}
  %meta{:name => "author", :content => "Jason Meridth - randomnumbers.heroku.com"}
  %meta{:name => "keywords", :content => "Jason Meridth, Heroku, Random Numbers, Sinatra, Haml"}
  %meta{:name => "description", :content => "Random Number generator written using Sinatra and Haml deployed to Heroku"}
  %style{:type => "text/css", :media => "screen"}
  :css
    body{background-color:#fff;color:#333;font-family:Arial,Verdana,sans-serif;text-align:left;}
    a,a:visited,a:active{color:#0080ff;text-decoration:underline;font-size:.5em}
    a:hover{text-decoration:none;}
    input[type=text]{border:1px solid #ccc;color:#ccc;font-size:1em;padding:4px 6px 4px 6px;}
    .domain{font-weight:bold;}
    a.adlink{color: orange;}
    #container{clear:both;font-size:3em;width:400px;margin-left:auto;margin-right:auto;}
    #result{color:#000;font-size:3em;font-weight:bold;text-align:center;width:400px;margin-left:auto;margin-right:auto;}
    #min{width:300px;}
    #max{width:300px;}
    #count{width:300px;}
    #error{color:#f00;font-size:0.5em;font-weight:bold;text-align:center;margin-left:auto;margin-right:auto;}
  %head
    %title Random Numbers
  %body
    = yield
